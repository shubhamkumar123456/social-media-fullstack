<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <div>
      
        <h1>Enter new password</h1>
        <input id="password" type="text" placeholder="enter new password">
        <button onclick="handleSubmit()">Submit</button>
    </div>

    <script>
            let resetToken = '<%= resetToken  %>'
            console.log(resetToken)
        let passwordtag = document.getElementById('password')
       async function handleSubmit(){
            // console.log("hello")
            console.log(passwordtag.value)
            let res = await fetch(`http://localhost:8080/users/forgot-password/${resetToken}`,{
                method:"POST",
                headers:{
                    'content-type':'application/json'
                },
                body:JSON.stringify({password:passwordtag.value})
            })

            let data = await res.json();
            console.log(data)
        }
    </script>
</body>
</html>